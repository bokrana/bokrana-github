  /.two-custom.columns
  / #passions_count
  / .total-filter-link.filter{:data => {"filter" => ".passion" }}
  / %p#total_show #{@passion_count}
  / %p#total_show_pluralize #{"Passion".pluralize(@passion_count)}
  / .two-custom.columns
  / #account_count
