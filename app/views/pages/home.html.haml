  / %p#total_show #{@pssionate_count }
  / %p#total_show_pluralize #{"Account".pluralize(@pssionate_count)}
  / .marge.columns ...
  .sort-filter-wrap
   %ul{:id => "passions-sorts"  }
    %li.sort{:id => "sort_by_date",:data => {"sort" => "date-order:desc" }}   New
    %li.sort{:id => "sort_by_populate",:data => {"sort" => "populate-order:desc" }} Populate
    %li.sort{:id => "sort_by_name",:data => {"sort" => "name-order:asc" }} Alphabetically
  /= link_to "New Passion", new_passion_path , :remote => true , :id => "new_passion_link", data: { disable_with: "Loading.." }
  /- if logged_in? && current_passionate.passion.size > 1
  /%ul{:id => "passions-filter"}
  /.sperate
  /%li.filter{:id => "filter_all",:data => {"filter" => "all" }} All passions
